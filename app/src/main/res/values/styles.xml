<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:textColor">@color/radio_button_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.ConverSign.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">filled</item> <!-- or filled/outlined -->
    </style>

    <style name="Widget.ConverSign.Material.Theme.Overlay" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/Widget.ConverSign.TextInputEditText</item>
    </style>

    <style name="Widget.ConverSign.TextInputEditText" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingStart">4dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppLogoStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/app_logo</item>
    </style>

</resources>