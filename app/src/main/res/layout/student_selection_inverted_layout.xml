<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="58dp"
        android:background="@drawable/left_circular_corner_box"
        android:fontFamily="@font/k2d_semibold"
        android:gravity="center|end"
        android:paddingHorizontal="8dp"
        android:textColor="@color/student_selection_text_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconBackgroundView"
        app:layout_constraintEnd_toStartOf="@id/iconBackgroundView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iconBackgroundView"
        tools:text="Numbers" />

    <View
        android:id="@+id/iconBackgroundView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circular_corner_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:importantForAccessibility="no"
        android:src="@drawable/number_1"
        app:layout_constraintBottom_toBottomOf="@id/iconBackgroundView"
        app:layout_constraintEnd_toEndOf="@id/iconBackgroundView"
        app:layout_constraintStart_toStartOf="@id/iconBackgroundView"
        app:layout_constraintTop_toTopOf="@id/iconBackgroundView" />

</androidx.constraintlayout.widget.ConstraintLayout>