<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    tools:context=".student.fragments.LessonFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/deep_green"
        android:elevation="2dp"
        android:padding="@dimen/app_padding"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gameTypeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/k2d_semibold"
            android:textColor="@color/screen_bg"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/roadmapButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lesson / Challenge" />

        <TextView
            android:id="@+id/headerSubtitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/screen_bg"
            app:layout_constraintEnd_toEndOf="@+id/gameTypeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameTypeTextView"
            tools:text="Lesson / Challenge" />

        <ImageButton
            android:id="@+id/roadmapButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="false"
            android:backgroundTint="@color/screen_bg"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:src="@drawable/roadmap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/niceJobLinearLayout"
        app:layout_constraintTop_toBottomOf="@id/headerConstraintLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--    Lesson-->

                <LinearLayout
                    android:id="@+id/lessonsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/signsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lessonNextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/app_padding"
                        android:text="@string/next"
                        app:backgroundTint="@color/nice_job_button_bg_color" />
                </LinearLayout>

                <!--    Challenge-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/challengeConstraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:padding="@dimen/app_padding"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tipTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/app_padding"
                        android:fontFamily="@font/k2d_extrabolditalic"
                        android:text="@string/ai_camera_tip"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.camera.view.PreviewView
                        android:id="@+id/cameraView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="46dp"
                        app:layout_constraintTop_toBottomOf="@id/tipTextView"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/gestureDetectedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/k2d_extrabolditalic"
                        android:gravity="center"
                        android:text="@string/gesture_detected"
                        android:textColor="@color/nice_job_text_color"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/cameraView" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/challengePreviousClickListener"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/app_padding"
                        android:layout_marginTop="24dp"
                        android:text="@string/previous"
                        android:textColor="@color/deep_green"
                        app:backgroundTint="@color/screen_bg"
                        app:cornerRadius="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gestureDetectedTextView"
                        app:strokeColor="@color/deep_green"
                        app:strokeWidth="1dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/niceJobLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nice_job_bg_color"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="@dimen/app_padding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/k2d_semibold"
            android:text="@string/nice_job"
            android:textColor="@color/nice_job_text_color"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_got_that_correctly"
            android:textColor="@color/nice_job_text_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/screen_bg"
            app:backgroundTint="@color/nice_job_button_bg_color"
            app:cornerRadius="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>